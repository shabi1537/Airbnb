<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-xl rounded-lg p-10 mt-12 max-w-7xl">
    <h2 class="text-4xl text-black font-bold text-center mb-10">
      üè† Registered Homes
    </h2>

    <% if (registeredHomes.length === 0) { %>
      <p class="text-center text-gray-500 text-xl">No homes added yet. Be the first to host!</p>
    <% } else { %>
      <div class="grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-lg border border-gray-200 shadow-md hover:shadow-lg transition duration-300 overflow-hidden">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">

            <div class="p-5">
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-2">
                <i class="fas fa-map-marker-alt mr-2 text-blue-500"></i><%= home.location %>
              </p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-lg font-bold text-blue-600">Rs <%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700 text-sm"><%= home.rating || '4.5' %></span>
                </div>
              </div>

              <div class="flex space-x-3">
                <button class="w-1/2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded transition duration-300">
                  Book 
                </button> 
                
                <%- include('../partials/favourite-button', { home: home }) %>
                <a
                  href="/homes/<%= home._id %>"
                  class="w-1/2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded text-center transition duration-300"
                >
                  Details 
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
